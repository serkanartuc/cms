
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Slider Listesi</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Slider Listesi</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Sıra Numarası</th>
                            <th>Dil</th>
                            <th>Başlık</th>
                            <th>Resim</th>
                            <th></th>                            
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sıra Numarası</th>
                            <th>Dil</th>
                            <th>Başlık</th>
                            <th>Resim</th>
                            <th></th>   
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

<script>

    var dataTable;

    $(document).ready(function () {
        loadDataTable();
    });

    function loadDataTable() {

        dataTable = $('#example2').DataTable({
            "responsive": true,
         "autoWidth": false,
            "ajax": {
                "url": "/admin/slider/getall"
            },
            "columns": [
                { "data": "orderNo", "width": "10%" },
                { "data": "language.name", "width": "15%" },
                { "data": "title", "width": "45%" },
                { "data": "imagePath",
                    "render": function (data) {
                        return `
                                <img src="/${data}" class="img-fluid"/>
                            `
                    },
                   "width": "20%",
                   orderable: false
                },
                {
                    "data": "id",
                    "render": function (data) {
                        return `
                                <div class="text-center">
                                <a href="/admin/slider/edit?id=${data}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a onclick="Delete('/admin/slider/delete/${data}')" class="btn btn-danger")><i class="fa-solid fa-trash-can"></i></a>
                                </div>
                            `
                    },
                    "width": "10%",
                    orderable: false
                },
            ]
        });
    }

    function Delete(url) {

        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bunu geri alamazsınız!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'İptal',
            confirmButtonText: 'Evet, sil'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            toastr.success(data.message);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }

</script>

}



